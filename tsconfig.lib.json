{
  "extends": "./tsconfig.app.json",
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "noEmit": false,
    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": "./dist",
    "allowImportingTsExtensions": false,
    "verbatimModuleSyntax": false
  },
  "include": [
    "src/lib",
    "src/components",
    "src/types",
    "src/hooks",
    "src/vite-env.d.ts"
  ],
  "exclude": ["src/App.tsx", "src/main.tsx"]
}
