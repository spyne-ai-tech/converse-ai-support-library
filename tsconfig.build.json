{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": "dist",
    "noEmit": false,
    "composite": false,
    "skipLibCheck": true,
    "jsx": "react-jsx",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": false
  },
  "include": ["src"],
  "exclude": ["**/*.test.*", "**/*.stories.*", "src/App.tsx", "src/main.tsx"]
}
